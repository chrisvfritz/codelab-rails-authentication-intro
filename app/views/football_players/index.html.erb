<p id="notice"><%= notice %></p>

<%= form_tag football_players_path, method: :get do %>
  <%= label_tag(:name_search, "Name") %>
  <%= text_field_tag :name_search, params[:name_search] %>
  <%= label_tag(:jersey_search, "Jersey #") %>
  <%= number_field_tag :jersey_search, params[:jersey_search] %>
  <%= label_tag(:team_search, "Team") %>
  <%= text_field_tag :team_search, params[:team_search] %>
  <%= submit_tag("Search") %>
<% end %>

<h1>Listing Football Players</h1>
<div class="table-hover">

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Team</th>
        <th>Jersey number</th>
        <th>Salary</th>
        <th>Rookie</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @football_players.each do |football_player| %>
        <tr>
          <td><%= football_player.name %></td>
          <td><%= football_player.team %></td>
          <td><%= football_player.jersey_number %></td>
          <td><%= football_player.salary %></td>
          <td><%= football_player.rookie %></td>
          <td><%= link_to 'Show', football_player %></td>
          <td><%= link_to 'Edit', edit_football_player_path(football_player) %></td>
          <td><%= link_to 'Destroy', football_player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

